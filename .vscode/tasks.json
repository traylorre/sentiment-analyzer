{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Terraform: Format",
      "type": "shell",
      "command": "terraform",
      "args": ["fmt", "-recursive", "terraform/"],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Terraform: Lint (TFLint)",
      "type": "shell",
      "command": "cd",
      "args": ["terraform", "&&", "tflint"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Terraform: Format + Lint",
      "type": "shell",
      "command": "terraform fmt -recursive terraform/ && cd terraform && tflint",
      "options": {
        "cwd": "${workspaceFolder}",
        "shell": {
          "executable": "/bin/bash",
          "args": ["-c"]
        }
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
